#scenarioCard {
  background: #FFFFFF;
  border: 1px solid #E6E8EB;
  border-radius: 12px;
  max-height: 500px;
}
#scenarioCard:hover {
  border-color: #C9CDD2;
}
#scenarioCard[active="true"] {
  border: 4px solid #00889C;         /* secondary */
}
#scenarioImage {
  border: 1px solid #FFFFFF;  /* removing border breaks the layout for some reason */
  border-radius: 8px;
  background: #FFFFFF;
}

#scenarioTitle {
  font-size: 20px;
  font-weight: 800;
}
