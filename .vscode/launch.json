{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "State: Manual Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/modules/tests/manual_test_state.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
    },
    {
      "name": "Action: Manual Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/modules/tests/manual_test_action.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
    },
    {
      "name": "State-Action: Adaptive Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/modules/tests/manual_test_state_action_adaptive_control.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "args": [
        "--sumocfg", "environments/single_intersection/sumo_files/single-intersection-single-lane.sumocfg",
        "--tls-id", "tlJ",
        "--seconds", "600",
        "--fixed-green-s", "10",
        "--seed", "42",
        "--plot"
      ],
    },
    {
      "name": "run_city (train)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run_city.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      // "args": [
      //   "--sumocfg", "environments/ingolstadt/sumo_files/ingolstadt21.sumocfg",
      //   "--yaml", "environments/ingolstadt/intersections/nodes.yaml",
      //   "--nodes", "N1", "N2", "N10",
      //   "--mode", "train",
      //   "--ticks-per-decision", "5",
      //   "--timesteps", "10000",
      //   "--out", "runs/exp_debug",
      //   "--progress"
      // ]
      "args": [
        "--sumocfg", "environments/single_intersection/sumo_files/single-intersection-single-lane.sumocfg",
        "--yaml", "environments/single_intersection/intersections/nodes.yaml",
        "--nodes", "J",
        "--mode", "train",
        "--ticks-per-decision", "5",
        "--seconds", "10000",
        "--out", "runs/exp_debug",
        "--progress"
      ]
    },
    {
      "name": "run_city (eval, GUI)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run_city.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      // "args": [
      //   "--sumocfg", "environments/ingolstadt/sumo_files/ingolstadt21.sumocfg",
      //   "--yaml", "environments/ingolstadt/intersections/nodes.yaml",
      //   "--nodes", "N1", "N2", "N10",
      //   "--mode", "eval",
      //   "--ticks-per-decision", "5",
      //   "--seconds", "1800",
      //   "--out", "runs/exp_debug"
      // ]
      "args": [
        "--sumocfg", "environments/single_intersection/sumo_files/single-intersection-single-lane.sumocfg",
        "--yaml", "environments/single_intersection/intersections/nodes.yaml",
        "--nodes", "J",
        "--mode", "eval",
        "--ticks-per-decision", "1",
        "--seconds", "10000",
        "--out", "runs/exp_debug"
      ]
    }
  ]
}
