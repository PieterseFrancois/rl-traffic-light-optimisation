{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "State: Manual Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/modules/tests/manual_test_state.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
    },
    {
      "name": "Action: Manual Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/modules/tests/manual_test_action.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
    },
    {
      "name": "State-Action: Adaptive Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/modules/tests/manual_test_state_action_adaptive_control.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "args": [
        "--sumocfg", "environments/single_intersection/sumo_files/single-intersection-single-lane.sumocfg",
        "--tls-id", "tlJ",
        "--seconds", "600",
        "--fixed-green-s", "10",
        "--seed", "42",
        "--plot"
      ],
    },
    {
      "name": "Reward: Manual Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/modules/tests/manual_test_reward.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
    },
    {
      "name": "Preprocessor: Manual Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/modules/tests/manual_test_preprocessor.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
    },
    {
      "name": "PPO Surrounding Modules: Manual Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/modules/tests/manual_test_state_action_reward_preprocessor_rl_testcase.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "args": [
        "--sumocfg", "environments/single_intersection/sumo_files/single-intersection-single-lane.sumocfg",
        "--tls-id", "tlJ",
        "--nogui",
        "--seed", "42",
        "--episode-seconds", "4000",
        "--ticks-per-decision", "1",
        "--train-steps", "100000",
        "--baseline-green-s", "20",
        "--reward", "wait",
        "--norm-state",
        "--norm-reward",
        "--outdir", ".surrounding_modules_test_runs/ppo_test",
        "--tensorboard", 
        "--logdir", ".surrounding_modules_test_runs/ppo_test/tb",
        "--tensorboard-port", "6006"
      ]
    }
  ]
}
